#:kivy 1.10.0
#:import FadeTransition kivy.uix.screenmanager.FadeTransition

Manager:
	transition: FadeTransition()
	id: mang
	#TelaInicial:
	#TelaSelectVoo:

<TelaSelectVoo>:
	name: 'selecvoo'

	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: .1
			Button:
				text: 'Voltar'
				size_hint_x: .3
				background_color: (0.5, 0.5, 1.3, 4)
				on_release: app.root.voltarTelaInic()

			Label:
				size_hint_x: .3

			Button:
				text: 'Recarregar'
				size_hint_x: .3
				background_color: (0, 0, 2, 4)
				on_release: app.root.recarregaTelaSelecVoo()

		Label:
			size_hint_y: .001

		ScrollView:
			id: scrollV
			size_hint_y: .9

<TelaInicial>:
	name: 'telainic'

	BoxLayout:
		orientation: 'vertical'
		Label:
			size_hint_y: .2

		Button:
			on_release: app.root.irTelaSelecVoo()
			text: "Voos"
			font_size: 15
			size_hint_y: .2
			size_hint_x: .5
			background_color: (0.2, 0.2, 1.3, 4)
			pos_hint: {'center_x': .5, 'center_y': .2}

		Label:
			size_hint_y: .5

		Button:
			on_release: app.stop()
			text: 'Sair'
			font_size: 15
			size_hint_y: .1
			size_hint_x: .3
			pos_hint: {'center_x': .5, 'center_y': .8}
			background_color: (100, 1, 1, 4)

<TelaParadasVoo>
	name: 'telaparada'
	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: .1
			Button:
				on_release: app.root.sairTelaParadaVoo()
				text: 'Voltar'
				font_size: 10
				size_hint_x: .3
				background_color: (.5, .5, 1.3, 1)
			Label:
				size_hint_x: .4

		Label:
			size_hint_y: .1
			text: root.nomeVoo

		ScrollView:
			id: scrollP
			size_hint_y: .7

<TelaCarregando>:
	name: 'telaloading'
	canvas.before:
        BorderImage:
            border: 10, 10, 10, 10
            source: 'CarregandoPAPkivy.png'
            pos: self.pos
            size: self.size

<BotaoListaVoo>:
	on_release: app.root.irTelaParadaVoo( root.voo)
